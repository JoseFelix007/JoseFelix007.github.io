---
import { Image } from "astro:assets";
import meImage from "@assets/me_real.png";
import EmailIcon from "@assets/icons/email.svg";
import LinkedinIcon from "@assets/icons/linkedin.svg";
import GithubIcon from "@assets/icons/github.svg";
import WhatsappIcon from "@assets/icons/whatsapp.svg";

import { getTranslation } from "../utils/i18n";
const lang = (Astro.currentLocale as "en" | "es") || "es";
const t = getTranslation(lang);
---

<div id="home" class="container page scrollable">
  <div class="page__info">
    <div>
      <h1 class="page__title">Jos√© Felix</h1>
      <div class="page__subtitle">
        <div class="page__subtitle__title">
          <span
            class="text__accent typed-text"
            style={{ "--n": t.me.info.title.length }}>{t.me.info.title}</span
          >
        </div>
        <div class="description-wrapper">
          <!-- Ghost element for layout reservation -->
          <p class="page__subtitle__description ghost">
            {t.me.info.description}
          </p>
          <!-- Actual typing element -->
          <p
            id="typed-desc"
            class="page__subtitle__description typing-absolute"
            data-text={t.me.info.description}
          >
          </p>
        </div>
      </div>
    </div>
    <div class="page__info__buttons">
      <a
        class="page__info__buttons__cv"
        href="/jose-felix-cv.pdf"
        target="_blank"
      >
        {t.me.info.cv}
      </a>
      <span class="page__info__buttons__socials">
        <a
          class="page__info__buttons__social"
          href="mailto:jafelixramos@gmail.com"
          target="_blank"
        >
          <EmailIcon />
        </a>
        <a
          class="page__info__buttons__social"
          href="https://www.linkedin.com/in/j-felix/"
          target="_blank"
        >
          <LinkedinIcon />
        </a>
        <a
          class="page__info__buttons__social"
          href="https://github.com/JoseFelix007"
          target="_blank"
        >
          <GithubIcon />
        </a>
        <a
          class="page__info__buttons__social"
          href="https://api.whatsapp.com/send?phone=51990013609&text=%F0%9F%92%BC%20Hola%20Jos%C3%A9%20Felix%2C%0ATe%20escribo%20para%20..."
          target="_blank"
        >
          <WhatsappIcon />
        </a>
      </span>
    </div>
  </div>
  <div class="page__image">
    <Image src={meImage} alt="Imagen de un desarrollador web" width="500" />
  </div>
</div>

<script>
  function typeDescription() {
    const descElement = document.getElementById("typed-desc");
    if (!descElement) return;

    const text = descElement.dataset.text || "";
    descElement.textContent = "";

    // Start after title finishes (approx 2.5s)
    const startDelay = 900;
    const typeSpeed = 12;

    setTimeout(() => {
      let i = 0;
      function type() {
        if (i < text.length) {
          descElement!.textContent += text.charAt(i);
          i++;
          setTimeout(type, typeSpeed);
        }
      }
      type();
    }, startDelay);
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", typeDescription);
  } else {
    typeDescription();
  }
</script>

<style lang="scss">
  @use "@styles/variables.scss";

  .container {
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 0;
    background: var(--color-background);
    background-size: 24px 24px;
    background-image: radial-gradient(
      circle,
      rgba(from var(--color-accent) r g b / 25%) 1px,
      transparent 0
    );
  }

  .page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem 0;

    @include variables.media(md) {
      padding: 0;
      flex-direction: row;
    }

    &__info {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      max-width: 90%;

      @include variables.media(sm) {
        max-width: 90%;
      }

      @include variables.media(md) {
        text-align: left;
        align-items: start;
        max-width: 40%;
      }

      &__buttons {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
        flex-direction: column;
        width: 100%;

        @include variables.media(md) {
          flex-direction: row;
        }

        &__cv {
          text-align: center;
          display: inline-block;
          border-radius: 0.5rem;
          padding: 0.5rem 2rem;
          text-decoration: none;
          cursor: pointer;
          font-size: variables.$text-md;

          color: var(--color-background);
          background: var(--color-primary);

          &:hover {
            background: rgba(from var(--color-primary) r g b / 75%);
          }
        }

        &__socials {
          margin-top: 1rem;
          display: flex;
          justify-content: center;
          gap: 1.5rem;

          @include variables.media(md) {
            margin-top: 0;
            gap: 1rem;
          }
        }

        &__social {
          text-align: center;
          display: inline-block;
          border-radius: 0.5rem;
          padding: 0.5rem 0.5rem;
          text-decoration: none;
          cursor: pointer;
          font-size: variables.$text-md;

          background: var(--color-text);

          &:hover {
            background: rgba(from var(--color-text) r g b / 75%);
          }

          & svg {
            height: 24px;
            width: 24px;
            fill: var(--color-background);
          }
        }
      }
    }

    &__image {
      padding: 2rem;
      max-width: 60%;
      @include variables.media(md) {
        max-width: 40%;
      }
      img {
        width: 100%;
        height: auto;

        /* Contour Style */
        // mask-image: radial-gradient(
        //   ellipse 70% 90% at 55% 0%,
        //   black 55%,
        //   transparent 100%
        // );
        // -webkit-mask-image: radial-gradient(
        //   ellipse 70% 90% at 55% 0%,
        //   black 55%,
        //   transparent 100%
        // );

        /* Glow/Shadow around the body */
        filter: drop-shadow(
          0 0 15px rgba(from var(--color-primary) r g b / 60%)
        );
      }
    }

    &__title {
      font-weight: 800;
      background: linear-gradient(
        to right,
        var(--color-text) 0%,
        var(--color-primary) 50%,
        var(--color-text) 100%
      );
      background-size: 200% auto;
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: gradient-flow 5s linear infinite;
    }

    &__subtitle {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      max-width: 95%;
      font-size: variables.$text-lg;
      font-weight: 400;

      @include variables.media(md) {
        align-items: start;
      }

      &__title {
        display: inline-flex; /* Treats the container as fitting to content */
        width: fit-content; /* Explicitly fit content */
        margin-bottom: 0.5rem;
        margin-inline: auto; /* Center in mobile */

        @include variables.media(md) {
          margin-inline: 0; /* Left align in desktop */
        }
      }

      &__description {
        display: block; // Keep base style
      }
    }

    .description-wrapper {
      position: relative;
      width: 100%;
    }

    .ghost {
      visibility: hidden;
      user-select: none;
    }

    .typing-absolute {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      margin: 0; /* Align perfectly */
    }
  }

  /* Buttons Staggered Entrance */
  .page__info__buttons {
    opacity: 0;
    animation: fade-up 0.8s ease-out forwards;
    animation-delay: 0.75s;
  }

  .text__accent {
    color: var(--color-primary);
    font-weight: 700;
  }

  /* Typing effect styles */
  .typed-text {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    border-right: 3px solid var(--color-primary);
    width: 0;
    animation:
      typing 1s steps(var(--n), end) forwards,
      blink-caret 0.75s step-end infinite;
    animation-delay: 0.5s;
  }

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: var(--color-primary);
    }
  }

  @keyframes gradient-flow {
    0% {
      background-position: 0% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
