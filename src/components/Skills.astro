---
import LinkedinIcon from "@assets/icons/linkedin.svg";
import GithubIcon from "@assets/icons/github.svg";
import EmailIcon from "@assets/icons/email.svg";
import WhatsappIcon from "@assets/icons/whatsapp.svg";

const langs = [
  "Laravel",
  "Php",
  "Vue",
  "React",
  "Nodejs",
  "JQuery",
  "Javascript",
  "Typescript",
  "Sass",
  "Css",
  "Bash",
  "Go",
];

import { getTranslation } from "../utils/i18n";
const lang = (Astro.currentLocale as "en" | "es") || "es";
const t = getTranslation(lang);
---

<div id="skills" class="container page scrollable">
  <div class="page__left">
    <div>
      <h2 class="page__subtitle">{t.education.title}</h2>
      <div class="page__education">
        <div class="page__education__content">
          <span class="page__education__date">{t.education.date}</span>
          <span class="page__education__title">
            <span>{t.education.degree}</span>
            <span class="page__education__sep"></span>
            <span class="page__education__subtitle"
              >Pontificia Universidad Cat√≥lica del Per√∫</span
            >
          </span>
          <ul class="page__education__description">
            <li>{t.education.prize}</li>
          </ul>
        </div>
      </div>
    </div>

    <div>
      <h2 class="page__subtitle">{t.skills.title}</h2>
      <div class="page__skills">
        <span class="page__skills__tags">
          {
            langs?.map((lang) => (
              <span class={`page__skills__tag ${lang.toLowerCase()}`}>
                {lang}
              </span>
            ))
          }
        </span>
      </div>
    </div>
  </div>
  <div class="page__right">
    <h2 class="page__subtitle">{t.contact.title}</h2>
    <div class="page__contact">
      <p>{t.contact.text}</p>
      <div class="page__contact__social">
        <a href="mailto:jafelixramos@gmail.com" target="_blank">
          <EmailIcon />
        </a>
        <a href="https://www.linkedin.com/in/j-felix/" target="_blank">
          <LinkedinIcon />
        </a>
        <a href="https://github.com/JoseFelix007" target="_blank">
          <GithubIcon />
        </a>
        <a
          href="https://api.whatsapp.com/send?phone=51990013609&text=%F0%9F%92%BC%20Hola%20Jos%C3%A9%20Felix%2C%0ATe%20escribo%20para%20..."
          target="_blank"
        >
          <WhatsappIcon />
        </a>
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  @use "@styles/variables.scss";

  .container {
    width: 100%;
    min-height: 100%;
    position: relative;
    z-index: 0;
    background: var(--color-background);
    background-size: 24px 24px;
    background-image: radial-gradient(
      circle,
      rgba(from var(--color-accent) r g b / 25%) 1px,
      transparent 0
    );
  }

  .page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;

    @include variables.media(md) {
      flex-direction: row;
    }

    &__left {
      height: 100%;
      width: 90%;

      display: flex;
      flex-direction: column;
      gap: 2rem;

      @include variables.media(md) {
        width: 39%;
      }
    }

    &__right {
      height: 100%;
      width: 90%;

      @include variables.media(md) {
        width: 39%;
      }
    }

    &__subtitle {
    }

    &__education {
      display: flex;

      &__content {
        display: flex;
        flex-direction: column;
      }

      &__date {
        color: rgba(from var(--color-text) r g b / 70%);
      }

      &__title {
        color: var(--color-primary);
        font-size: variables.$text-lg;
        font-weight: 700;

        display: flex;
        align-items: flex-start;
        flex-direction: column;

        @include variables.media(md) {
          flex-direction: row;
          align-items: center;
        }
      }

      &__subtitle {
        color: var(--color-accent);
        font-size: variables.$text-md;

        @include variables.media(md) {
          color: var(--color-primary);
          font-size: variables.$text-lg;
        }
      }

      &__sep {
        display: none;
        border-radius: 50%;
        width: 0.3rem;
        height: 0.3rem;
        background: rgba(from var(--color-primary) r g b / 90%);
        margin: 0 0.5rem;

        @include variables.media(md) {
          display: inline-block;
        }
      }

      &__description {
        padding-inline-start: 1.5rem;
        font-size: variables.$text-md;
        list-style-type: "üèÜ ";
      }
    }

    &__skills {
      &__tags {
        display: inline-block;
        width: 85%;
        font-size: variables.$text-md;
      }

      &__tag {
        display: inline-block;
        border-radius: 0.5rem;
        padding: 0.2rem 0.5rem;
        margin-right: 0.7rem;
        margin-bottom: 0.7rem;
        // font-size: variables.$text-sm;
      }
    }

    &__contact {
      &__social {
        display: flex;
        justify-content: space-around;
        padding: 2rem;

        & a {
          text-align: center;
          cursor: pointer;

          & svg {
            height: 3rem;
            width: 3rem;
            fill: var(--color-text);

            &:hover {
              fill: rgba(from var(--color-text) r g b / 75%);
            }
          }
        }
      }
    }
  }

  .vue {
    color: #fefefe;
    background: #33a06f;
  }

  .laravel {
    color: #fefefe;
    background: #f61500;
  }

  .nodejs {
    color: #fefefe;
    background: #2c682c;
  }

  .bash {
    color: #fefefe;
    background: #3e484a;
  }

  .php {
    color: #fefefe;
    background: #4f5b93;
  }

  .jquery {
    color: #fefefe;
    background: #0769ad;
  }

  .javascript {
    color: #fefefe;
    background: #d6bb38;
  }

  .css {
    color: #fefefe;
    background: #1c76b8;
  }

  .sass {
    color: #fefefe;
    background: #bf4080;
  }

  .react {
    color: #fefefe;
    background: #087ea4;
  }

  .go {
    color: #fefefe;
    background: #08667e;
  }

  .typescript {
    color: #fefefe;
    background: #3178c6;
  }
</style>
