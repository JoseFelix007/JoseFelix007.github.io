---
const langs1 = ["Laravel", "Php", "Vue", "Nodejs", "Javascript", "Sass"];
const langs2 = ["Php", "JQuery", "Javascript", "Css"];
const langs3 = ["Php", "JQuery", "Javascript", "Css", "Bash"];

import { getTranslation } from "../utils/i18n";
const lang = (Astro.currentLocale as "en" | "es") || "es";
const t = getTranslation(lang);
---

<div id="works" class="container page scrollable">
  <h2 class="page__title">{t.works.title}</h2>
  <div class="page__works">
    <div class="page__work">
      <div class="page__work__line">
        <div class="page__work__icon">
          <span></span>
        </div>
      </div>
      <div class="page__work__content">
        <span class="page__work__tags">
          {
            langs1?.map((lang) => (
              <span class={`page__work__tag ${lang.toLowerCase()}`}>
                {lang}
              </span>
            ))
          }
        </span>
        <span class="page__work__date">{t.works.aira.date}</span>
        <span class="page__work__title">
          <span>{t.works.aira.title}</span>
          <span class="page__work__sep"></span>
          <span class="page__work__subtitle">Aira</span>
        </span>
        <ul class="page__work__description">
          <li>{t.works.aira[0]}</li>
          <li>{t.works.aira[1]}</li>
          <li>{t.works.aira[2]}</li>
        </ul>
      </div>
    </div>
    <div class="page__work">
      <div class="page__work__line">
        <div class="page__work__icon">
          <span></span>
        </div>
      </div>
      <div class="page__work__content">
        <span class="page__work__tags">
          {
            langs2?.map((lang) => (
              <span class={`page__work__tag ${lang.toLowerCase()}`}>
                {lang}
              </span>
            ))
          }
        </span>
        <span class="page__work__date">{t.works.phuyu.date}</span>
        <span class="page__work__title">
          <span>{t.works.phuyu.title}</span>
          <span class="page__work__sep"></span>
          <span class="page__work__subtitle">Phuyu Soft</span>
        </span>
        <ul class="page__work__description">
          <li>{t.works.phuyu[0]}</li>
          <li>{t.works.phuyu[1]}</li>
          <li>{t.works.phuyu[2]}</li>
        </ul>
      </div>
    </div>
    <div class="page__work">
      <div class="page__work__line">
        <div class="page__work__icon">
          <span></span>
        </div>
      </div>
      <div class="page__work__content">
        <span class="page__work__tags">
          {
            langs3?.map((lang) => (
              <span class={`page__work__tag ${lang.toLowerCase()}`}>
                {lang}
              </span>
            ))
          }
        </span>
        <span class="page__work__date">{t.works.pucp.date}</span>
        <span class="page__work__title">
          <span>{t.works.pucp.title}</span>
          <span class="page__work__sep"></span>
          <span class="page__work__subtitle"
            >Pontificia Universidad Católica del Perú</span
          >
        </span>
        <ul class="page__work__description">
          <li>{t.works.pucp[0]}</li>
          <li>{t.works.pucp[1]}</li>
          <li>{t.works.pucp[2]}</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  @use "@styles/variables.scss";

  .container {
    width: 100%;
    min-height: 100%;
    position: relative;
    z-index: 0;
    background: var(--color-background);
    background-size: 24px 24px;
    background-image: radial-gradient(
      circle,
      rgba(from var(--color-accent) r g b / 25%) 1px,
      transparent 0
    );
  }

  .page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    @include variables.media(md) {
      flex-direction: column;
    }

    &__title {
      width: 80%;
      margin-bottom: 2rem;
    }

    &__works {
      display: flex;
      flex-direction: column;
      align-items: start;

      width: 80%;
      height: 80%;
    }

    &__work {
      display: flex;

      &__icon {
        width: 2rem;
        height: 2rem;

        display: flex;
        justify-content: center;
        align-items: center;

        & span {
          display: inline-block;
          border-radius: 50%;
          width: 0.7rem;
          height: 0.7rem;
          background: rgba(from var(--color-text) r g b / 80%);
        }
      }

      &__line {
        position: relative;

        &::after {
          position: absolute;
          top: 2rem;
          left: 50%;
          content: "";
          height: calc(100% - 2rem);
          width: 1px;
          background: rgba(from var(--color-text) r g b / 80%);
        }
      }

      &:last-child &__line::after {
        display: none;
      }

      &__content {
        margin: 0.25rem 1rem 1rem;
        display: flex;
        flex-direction: column;
      }

      &__date {
        color: rgba(from var(--color-text) r g b / 70%);
      }

      &__title {
        color: var(--color-primary);
        font-size: variables.$text-xl;
        font-weight: 700;

        display: flex;
        align-items: flex-start;
        flex-direction: column;

        @include variables.media(md) {
          flex-direction: row;
          align-items: center;
        }
      }

      &__subtitle {
        color: var(--color-accent);
        font-size: variables.$text-lg;

        @include variables.media(md) {
          color: var(--color-primary);
          font-size: variables.$text-xl;
        }
      }

      &__sep {
        display: none;
        border-radius: 50%;
        width: 0.3rem;
        height: 0.3rem;
        background: rgba(from var(--color-primary) r g b / 90%);
        margin: 0 0.5rem;

        @include variables.media(md) {
          display: inline-block;
        }
      }

      &__description {
        padding-inline-start: 1.5rem;
        font-size: variables.$text-lg;
        list-style-type: "- ";
      }

      &__tags {
      }

      &__tag {
        display: inline-block;
        border-radius: 0.5rem;
        padding: 0.2rem 0.5rem;
        margin-right: 0.2rem;
        margin-bottom: 0.2rem;
        font-size: variables.$text-sm;
      }
    }
  }

  .vue {
    color: #fefefe;
    background: #33a06f;
  }

  .laravel {
    color: #fefefe;
    background: #f61500;
  }

  .nodejs {
    color: #fefefe;
    background: #2c682c;
  }

  .bash {
    color: #fefefe;
    background: #3e484a;
  }

  .php {
    color: #fefefe;
    background: #4f5b93;
  }

  .jquery {
    color: #fefefe;
    background: #0769ad;
  }

  .javascript {
    color: #fefefe;
    background: #d6bb38;
  }

  .css {
    color: #fefefe;
    background: #1c76b8;
  }

  .sass {
    color: #fefefe;
    background: #bf4080;
  }
</style>
