---
import { Image } from "astro:assets";
import developerImage from "@assets/developer.svg";

import { getTranslation } from "../utils/i18n";
const lang = (Astro.currentLocale as "en" | "es") || "es";
const t = getTranslation(lang);
---

<div id="about" class="container page scrollable">
  <div class="page__image">
    <Image
      src={developerImage}
      alt="Imagen de un desarrollador web"
      width="600"
      height="600"
    />
  </div>
  <div class="page__about">
    <h2>{t.about.title}</h2>
    <p>{t.about[0]}</p>
    <p>{t.about[1]}</p>
    <p>{t.about[2]}</p>
  </div>
</div>

<style lang="scss">
  @use "@styles/variables.scss";

  .container {
    width: 100%;
    min-height: 100%;
    position: relative;
    z-index: 0;
    background: var(--color-background);
    background-size: 8px 8px;
    background-image: radial-gradient(
      circle,
      rgba(from var(--color-accent) r g b / 25%) 1px,
      transparent 0
    );
  }

  .page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;

    @include variables.media(md) {
      flex-direction: row;
    }

    &__about {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: justify;
      max-width: 90%;

      @include variables.media(sm) {
        max-width: 90%;
      }

      @include variables.media(md) {
        // text-align: left;
        align-items: start;
        max-width: 40%;
      }

      h2 {
        padding: 0 1rem;
        text-align: center;
      }
      p {
        padding: 1rem;
        font-size: var(--text-md);

        @include variables.media(md) {
          font-size: var(--text-lg);
        }
      }
    }

    &__image {
      max-width: 60%;
      @include variables.media(md) {
        max-width: 40%;
      }
      img {
        width: 100%;
        height: auto;
      }
    }
  }
</style>
