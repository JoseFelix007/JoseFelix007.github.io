---
interface Props {
  id: string;
}

const { id } = Astro.props;

import { getTranslation } from "../utils/i18n";
const lang = (Astro.currentLocale as "en" | "es") || "es";
const t = getTranslation(lang);
---

<div class="modal-overlay" id={`${id}-overlay`}>
  <div class="modal" id={id}>
    <slot />
    <button class="modal-close" id={`${id}-close`} title={t.close}>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
</div>

<style lang="scss">
  @use "@styles/variables.scss";

  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 0;
    transition: opacity 0.3s ease;

    &.active {
      opacity: 1;
    }
  }

  .modal {
    background-color: var(--color-background);
    padding: 2.5rem;
    border-radius: 1rem;
    width: 90%;
    max-width: 1200px; // Limit max width on large screens
    color: var(--color-text);
    position: relative;
    max-height: 85%;
    overflow-y: auto;

    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(from var(--color-text) r g b / 10%);

    transform: scale(0.95);
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1); // Bouncy effect

    .modal-overlay.active & {
      transform: scale(1);
      opacity: 1;
    }

    // Custom scrollbar
    &::-webkit-scrollbar {
      width: 8px;
    }
    &::-webkit-scrollbar-track {
      background: transparent;
    }
    &::-webkit-scrollbar-thumb {
      background-color: rgba(from var(--color-text) r g b / 20%);
      border-radius: 20px;
    }
  }

  .modal-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: rgba(from var(--color-text) r g b / 5%);
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--color-text);
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    z-index: 10;

    &:hover {
      background: rgba(from var(--color-primary) r g b / 10%);
      color: var(--color-primary);
      transform: rotate(90deg);
    }
  }
</style>
